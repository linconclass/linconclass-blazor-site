@page "/galeria"

<PageTitle>Galeria de Fotos - Lincon Class Saxofonista</PageTitle>

<header class="text-center my-5">
    <h1 class="display-4 fw-bold text-primary">Álbum de Fotos | Lincon Class</h1>
    <p class="lead">Música e Saxofone nos momentos mais especiais: Casamentos, Cerimoniais e Eventos.</p>
</header>

<div class="container my-5">
    <div class="row g-4">

        @foreach (var foto in Fotos)
        {
            <div class="col-lg-3 col-md-4 col-6">
                <div class="card shadow-sm border-0 h-100">

                    <img src="@foto.UrlImagem"
                         class="card-img-top"
                         alt="@foto.Legenda"
                         style="object-fit: cover; height: 250px;" />

                    <div class="card-body p-2 bg-light">
                        <p class="card-text text-muted mb-0 small">@foto.Legenda</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


